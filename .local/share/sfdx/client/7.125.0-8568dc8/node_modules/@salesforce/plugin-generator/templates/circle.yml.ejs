---
version: 2
jobs:
  node-latest: &test
    docker:
      - image: node:latest
    working_directory: ~/cli
    steps:
      - checkout
      - restore_cache: &restore_cache
          keys:
            - v1-npm-{{checksum ".circleci/config.yml"}}-{{checksum "<%- yarn ? 'yarn.lock' : 'package-lock.json' %>"}}
            - v1-npm-{{checksum ".circleci/config.yml"}}
      - run:
          name: Install dependencies
          command: yarn
      <%_ if (['single', 'multi'].includes(type)) { _%>
      - run: ./bin/run --version
      <%_ } _%>
      <%_ if (['single', 'multi', 'plugin'].includes(type)) { _%>
      - run: ./bin/run --help
      <%_ } _%>
      - run:
          name: Build plugin
          command: <%- yarn ? 'yarn' : 'npm' %> prepack
      - run:
          name: Testing
          command: <%- yarn ? 'yarn' : 'npm' %> test
  cache:
    <<: *test
    steps:
      - checkout
      - run:
          name: Install dependencies
          command: yarn
      - save_cache:
          key: v1-npm-{{checksum ".circleci/config.yml"}}-{{checksum "<%- yarn ? 'yarn.lock' : 'package-lock.json' %>"}}
          paths:
            - ~/cli/node_modules
            <%_ if (yarn) { _%>
            - /usr/local/share/.cache/yarn
            - /usr/local/share/.config/yarn
            <%_ } else { _%>
            - ~/.npm
            - /usr/local/lib/node_modules
            <%_ } _%>

workflows:
  version: 2
  "<%= pjson.name %>":
    jobs:
      - node-latest
      - cache:
          filters:
            tags:
              only: /^v.*/
            branches:
              ignore: /.*/
